        rod/koala
        dianne/emu
        scott/wombat
        peter/opal
    -->

<!-- 认证管理器 -->
    <authentication-manager>
		<authentication-provider user-service-ref="myUserDetailService">
		</authentication-provider>
	</authentication-manager>
	
	<beans:bean id="myUserDetailService"
        class="com.ctgu.util.MyUserDetailService" />
        
</beans:beans>